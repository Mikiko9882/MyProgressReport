<% content_for(:title, t('.title')) %>
<!-- Sign up form -->
<div class="container d-flex flex-wrap justify-content-center justify-content-center pt-5">
  <div class="w-100 align-self-end pt-1 pt-md-4 pb-4" style="max-width: 526px;">
    <h1 class="text-center text-xl-start"><%= t '.title' %></h1>
    <%= form_with model: @school, url: admin_school_path(@school), local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="row">
        <div class="col-12">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-12">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :address %>
              <%= f.text_field :address, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-12">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :phone_number %>
              <%= f.text_field :phone_number, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-12">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :email %>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="col-12">
          <div class="position-relative mb-4">
            <div class="form-group">
              <%= f.label :website %>
              <%= f.text_field :website, class: 'form-control' %>
            </div>
          </div>
        </div>
      </div>
      <%= f.submit '新規登録', class: "btn btn-primary shadow-primary btn-lg w-100" %>
    <% end %>
  </div>
</div>