<% content_for(:title, t('.title')) %>
<!-- Breadcrumb -->
<nav class="container mt-lg-4 pt-5" aria-label="breadcrumb"></nav>
<!-- Page content -->
<section class="container mt-4 mb-lg-5 pt-lg-2 pb-5">
  <!-- Page title + Layout switcher + Search form -->
  <div class="row align-items-end gy-3 mb-4 pb-lg-3 pb-1">
    <div class="col-lg-5 col-md-4">
      <h1 class="mb-2 mb-md-0"><%= t '.title' %></h1>
    </div>
  </div>
  <div class="btn-group mb-3" role="group">
    <%= link_to t('defaults.edit'), edit_admin_school_path(@school), class: 'btn btn-success me-2' %>
    <%= button_to t('defaults.delete'), admin_school_path(@school), method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: 'btn btn-danger me-2' %>
    <%= link_to '先生を追加する', new_admin_school_teacher_path(@school), class: 'btn btn-primary me-2' %>
    <%= link_to '学校一覧ページへ', admin_schools_path, class: 'btn btn-secondary' %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th><%= School.human_attribute_name(:name) %></th>
          <th>コード</th>
          <th><%= School.human_attribute_name(:address) %></th>
          <th><%= School.human_attribute_name(:phone_number)%></th>
          <th><%= School.human_attribute_name(:email)%></th>
          <th><%= School.human_attribute_name(:website) %></th>
          <th>先生一覧</th>
        </tr>
        </thead>
        <tbody>
          <td><%= @school.name %></td>
          <td><%= @school.code %></td>
          <td><%= @school.address %></td>
          <td><%= @school.phone_number %></td>
          <td><%= @school.email %></td>
          <td><%= @school.website %></td>
          
        </tbody>
      </table>
    </div>
  </div>
</section>