<!-- Sign in form -->
<% content_for(:title, t('.title')) %>
<div class="container d-flex flex-wrap justify-content-center justify-content-center pt-5">
  <div class="w-100 align-self-end pt-1 pt-md-4 pb-4" style="max-width: 526px;">
    <h1 class="text-center text-xl-start"><%= t '.title' %></h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>
      <div class="position-relative mb-4">
        <div class="form-group">
          <%= f.label :ご登録のメールアドレス %><br />
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="actions mb-4">
        <%= f.submit "パスワード再設定用リンクを送信", class: 'btn btn-primary shadow-primary btn-lg w-100' %>
      </div>
    <% end %>
    <%= render "admins/shared/links" %>
  </div>
</div>
