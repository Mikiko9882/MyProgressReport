<% content_for(:title, t('.title')) %>
<div class="container d-flex flex-wrap justify-content-center justify-content-center pt-5">
  <div class="w-100 align-self-end pt-1 pt-md-4 pb-4" style="max-width: 526px;">
    <h1><%= t('.title') %></h1>
    <div class="btn-group mb-3" role="group">
      <%= link_to t('defaults.edit'), '#', class: 'btn btn-success me-2' %>
      <%= button_to t('defaults.delete'), '#', method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: 'btn btn-danger me-2' %>
      <%= link_to 'テスト一覧に戻る', sample_teacher_sample_test_results_path, class: 'btn btn-primary' %>
    </div>
    <table class="table table-bordered bg-white">
      <tr>
        <th scope="row" style="text-align: center;"><%= TestResult.human_attribute_name(:test_name) %></th>
        <td style="text-align: center;"><%= SampleTestName.find(@sample_test_result.sample_test_name_id).test_name %></td>
      </tr>
      <tr>
        <th scope="row" style="text-align: center;"><%= TestResult.human_attribute_name(:subject_id) %></th>
        <td style="text-align: center;"><%= SampleSubject.find(@sample_test_result.sample_subject_id).subject_name %></td>
      </tr>
      <tr>
        <th scope="row" style="text-align: center;"><%= Student.human_attribute_name(:name) %></th>
        <td style="text-align: center;"><%= @sample_test_result.sample_student.name %></td>
      </tr>
      <tr>
        <th scope="row" style="text-align: center; color: red;"><%= TestResult.human_attribute_name(:score) %></th>
        <td style="text-align: center; color: red;"><%= @sample_test_result.score %>点</td>
      </tr>
      

      <tr>
        <th scope="row" style="text-align: center;"><%= TestResult.human_attribute_name(:max_score) %></th>
        <td style="text-align: center;"><%= SampleMaxScore.find(@sample_test_result.sample_max_score_id).max_score %>点</td>
      </tr>
      <tr>
        <th scope="row" style="text-align: center; color: red;"><%= TestResult.human_attribute_name(:achievement_rate) %></th>
        <td style="text-align: center; color: red;"><%= @sample_test_result.achievement_rate %>%</td>
      </tr>
      

      <tr>
        <th scope="row" style="text-align: center; color: red;"><%= TestResult.human_attribute_name(:display_preparation_time) %></th>
        <td style="text-align: center; color: red;"><%= @sample_test_result.display_preparation_time %></td>
      </tr>
      


      <tr>
        <th scope="row" style="text-align: center;"><%= TestResult.human_attribute_name(:created_at) %></th>
        <td style="text-align: center;"><%= l @sample_test_result.created_at, format: :long %></td>
      </tr>
    </table>
  </div>
</div>